{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@bubblyclouds-app/auth": ["../auth/src"],
      "@bubblyclouds-app/auth/*": ["../auth/src/*"],
      "@bubblyclouds-app/ui": ["../ui/src"],
      "@bubblyclouds-app/ui/*": ["../ui/src/*"],
      "@bubblyclouds-app/types": ["../types/src"],
      "@bubblyclouds-app/types/*": ["../types/src/*"],
      "@bubblyclouds-app/shared": ["../shared/src"],
      "@bubblyclouds-app/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
